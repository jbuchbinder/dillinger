#preview
  font-family: monospace
  // Page title
  h1
    font-family: monospace
    text-align: center
  // Action
  p
    font-family: monospace
    font-size: .8em
    font-style: italic
    &.credit
      text-align: center
    &.authors
      text-align: center
    &.source
      text-align: center
    &.notes
      text-align: center
    &.copyright
      text-align: center
  // Scene heading
  h3
    font-family: monospace
    font-weight: bold
    font-size: .8em
  .dialogue
    display: inline-block
    margin-left: 2em
    margin-right: 2em
    font-family: monospace
    // Character
    h4
      text-align: center
      font-family: monospace
      font-weight: normal
      font-size: .8em
    // Dialog
    p
      font-family: monospace
      font-size: .8em
      font-style: normal
      // Parentheticals
      &.parenthetical
        text-align: center
        font-style: italic

